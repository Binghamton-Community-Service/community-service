-#  This file is app/views/projects/index.html.haml

%h4 All Community Service Projects

%table.table#projects
  %thead
    %tr
      %th{:class => @name_header}= link_to 'Name', projects_path(:sort => 'name'), :id => 'name_header'
      %th{:class => @cause_header}= link_to 'Cause', projects_path(:sort => 'cause'), :id => 'cause_header'
      %th{:class => @geography_header}= link_to 'Geography', projects_path(:sort => 'geography'), :id => 'geography_header'
      %th{:class => @volunteers_header}= link_to 'Volunteers', projects_path(:sort => 'volunteers'), :id => 'volunteers_header'
      %th{:class => @budget_header}= link_to 'Budget', projects_path(:sort => 'budget'), :id => 'budget_header'
      %th{:class => @difficulty_header}= link_to 'Difficulty', projects_path(:sort => 'difficulty'), :id => 'difficulty_header'
      %th Description

  %tbody
    - @projects.each do |project|
      %tr
        %td= project.name 
        %td= project.cause 
        %td= project.geography
        %td= @volunteers[project.volunteers.to_i]
        %td= @budgets[project.budget.to_i]
        %td= @difficulties[project.difficulty.to_i]
        %td= link_to "#{project.name} description", project_path(project)
        %td
          %a{href: edit_project_path(project), class: "glyphicon glyphicon-edit", id: "edit_link_id" }
